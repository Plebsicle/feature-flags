{
  "designSystemProfile": {
    "name": "WorkOS B2B SaaS Design System",
    "category": "Enterprise SaaS Platform",
    "designPhilosophy": "Clean, professional, trust-building interface with modern gradients and enterprise-grade credibility",
    
    "colorPalette": {
      "primary": {
        "brand": "#6366F1",
        "brandLight": "#818CF8",
        "brandDark": "#4F46E5"
      },
      "gradients": {
        "heroGradient": "linear-gradient(135deg, #8B5CF6 0%, #06B6D4 50%, #10B981 100%)",
        "accentGradient": "linear-gradient(135deg, #EC4899 0%, #8B5CF6 50%, #06B6D4 100%)",
        "subtleGradient": "linear-gradient(135deg, #F3F4F6 0%, #E5E7EB 100%)"
      },
      "neutrals": {
        "white": "#FFFFFF",
        "gray50": "#F9FAFB",
        "gray100": "#F3F4F6",
        "gray200": "#E5E7EB",
        "gray300": "#D1D5DB",
        "gray400": "#9CA3AF",
        "gray500": "#6B7280",
        "gray600": "#4B5563",
        "gray700": "#374151",
        "gray800": "#1F2937",
        "gray900": "#111827"
      },
      "semantic": {
        "error": "#EF4444",
        "errorLight": "#FEE2E2",
        "success": "#10B981",
        "warning": "#F59E0B"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "fallback": "system-ui, sans-serif"
      },
      "scale": {
        "hero": {
          "fontSize": "3.5rem",
          "lineHeight": "1.1",
          "fontWeight": "700",
          "letterSpacing": "-0.025em"
        },
        "h1": {
          "fontSize": "2.25rem",
          "lineHeight": "1.2",
          "fontWeight": "600",
          "letterSpacing": "-0.025em"
        },
        "h2": {
          "fontSize": "1.5rem",
          "lineHeight": "1.3",
          "fontWeight": "600"
        },
        "body": {
          "fontSize": "1rem",
          "lineHeight": "1.5",
          "fontWeight": "400"
        },
        "small": {
          "fontSize": "0.875rem",
          "lineHeight": "1.4",
          "fontWeight": "400"
        },
        "caption": {
          "fontSize": "0.75rem",
          "lineHeight": "1.4",
          "fontWeight": "500"
        }
      }
    },

    "spacing": {
      "scale": [0, 4, 8, 12, 16, 20, 24, 32, 40, 48, 64, 80, 96, 128, 160, 192],
      "containers": {
        "maxWidth": "1200px",
        "padding": "1.5rem",
        "paddingMobile": "1rem"
      },
      "sections": {
        "vertical": "5rem",
        "verticalMobile": "3rem"
      }
    },

    "components": {
      "buttons": {
        "primary": {
          "background": "#6366F1",
          "color": "#FFFFFF",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "0.5rem",
          "fontWeight": "500",
          "fontSize": "1rem",
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#4F46E5",
            "transform": "translateY(-1px)"
          }
        },
        "secondary": {
          "background": "#FFFFFF",
          "color": "#374151",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "0.5rem",
          "fontWeight": "500",
          "fontSize": "1rem",
          "border": "1px solid #D1D5DB",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#F9FAFB",
            "borderColor": "#9CA3AF"
          }
        }
      },

      "cards": {
        "default": {
          "background": "#FFFFFF",
          "borderRadius": "0.75rem",
          "padding": "2rem",
          "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
          "border": "1px solid #E5E7EB"
        },
        "elevated": {
          "background": "#FFFFFF",
          "borderRadius": "1rem",
          "padding": "2.5rem",
          "boxShadow": "0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
          "border": "1px solid #E5E7EB"
        }
      },

      "forms": {
        "input": {
          "background": "#FFFFFF",
          "border": "1px solid #D1D5DB",
          "borderRadius": "0.5rem",
          "padding": "0.75rem 1rem",
          "fontSize": "1rem",
          "color": "#111827",
          "placeholder": "#9CA3AF",
          "focus": {
            "borderColor": "#6366F1",
            "boxShadow": "0 0 0 3px rgba(99, 102, 241, 0.1)"
          },
          "error": {
            "borderColor": "#EF4444",
            "boxShadow": "0 0 0 3px rgba(239, 68, 68, 0.1)"
          }
        },
        "label": {
          "fontSize": "0.875rem",
          "fontWeight": "500",
          "color": "#374151",
          "marginBottom": "0.5rem"
        }
      },

      "navigation": {
        "header": {
          "background": "#FFFFFF",
          "borderBottom": "1px solid #E5E7EB",
          "padding": "1rem 0",
          "position": "sticky",
          "top": 0,
          "zIndex": 50
        },
        "logo": {
          "fontSize": "1.5rem",
          "fontWeight": "700",
          "color": "#111827"
        },
        "links": {
          "fontSize": "0.875rem",
          "fontWeight": "500",
          "color": "#6B7280",
          "hover": {
            "color": "#374151"
          }
        }
      },

      "badges": {
        "checkmark": {
          "background": "#10B981",
          "color": "#FFFFFF",
          "borderRadius": "50%",
          "width": "1.25rem",
          "height": "1.25rem",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center"
        }
      }
    },

    "layouts": {
      "heroSection": {
        "structure": "Centered content with large heading, subtitle, and CTA buttons",
        "background": "Light gray (#F9FAFB) with decorative gradient elements",
        "contentWidth": "max-width: 800px",
        "textAlignment": "center",
        "spacing": "Large vertical padding (5rem+)"
      },
      
      "authForms": {
        "structure": "Centered card with form elements",
        "background": "Light gray page background",
        "cardWidth": "max-width: 480px",
        "cardPosition": "Centered both horizontally and vertically",
        "elements": ["Logo", "Title", "Form fields", "Submit button", "Alternative actions"]
      },

      "twoColumn": {
        "structure": "Left form, right feature list",
        "breakpoint": "768px",
        "leftWidth": "50%",
        "rightWidth": "50%",
        "mobileStack": true
      }
    },

    "animations": {
      "transitions": {
        "default": "all 0.2s ease",
        "hover": "transform 0.2s ease, box-shadow 0.2s ease",
        "focus": "border-color 0.15s ease, box-shadow 0.15s ease"
      },
      "effects": {
        "buttonHover": "translateY(-1px)",
        "cardHover": "translateY(-2px) with enhanced shadow"
      }
    },

    "patterns": {
      "trustSignals": {
        "description": "Company logos in grayscale to show credibility",
        "placement": "Below hero section or in sidebars",
        "styling": "Opacity: 0.6, grayscale filter"
      },
      
      "progressIndicators": {
        "style": "Step-by-step with connecting lines",
        "activeState": "Primary color background",
        "completedState": "Success color with checkmark",
        "pendingState": "Gray background"
      },

      "featureLists": {
        "structure": "Checkmark icon + text description",
        "iconColor": "Success green (#10B981)",
        "textColor": "Gray-700 (#374151)",
        "spacing": "1rem between items"
      },

      "errorStates": {
        "inputErrors": "Red border + red helper text",
        "formErrors": "Red background with error message",
        "validation": "Real-time validation with color changes"
      }
    },

    "responsiveBreakpoints": {
      "mobile": "0px - 767px",
      "tablet": "768px - 1023px", 
      "desktop": "1024px+",
      "maxContainer": "1200px"
    },

    "accessibility": {
      "colorContrast": "WCAG AA compliant",
      "focusStates": "Visible focus rings with brand color",
      "fontSizes": "Minimum 16px for body text",
      "clickTargets": "Minimum 44px touch targets"
    },

    "brandElements": {
      "logo": {
        "style": "Geometric diamond/hexagon shape",
        "colors": ["Primary brand color", "Gradient variants"],
        "usage": "Consistent sizing and placement"
      },
      
      "illustrations": {
        "style": "3D geometric shapes with gradients",
        "colors": "Brand gradient palette",
        "placement": "Hero sections, empty states, feature highlights"
      }
    }
  }
}