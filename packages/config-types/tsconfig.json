{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",  
    "paths": {
      "@repo/db": ["../db/dist"],
      "@repo/db/*": ["../db/dist/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["*.ts"],
  "exclude": ["dist"]
}
