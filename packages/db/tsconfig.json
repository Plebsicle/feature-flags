{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",                        // Your TS files are directly in the folder
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["*.ts"],
  "exclude": ["dist", "node_modules"]
}
